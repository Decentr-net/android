<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DecentrActionsButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/shape_bg_button_base</item>
        <item name="android:textAppearance">@style/Base.Regular.Primary</item>
        <item name="android:elevation">0dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="DecentrEnableDisableAccentButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/selector_enable_disable_button_bg</item>
        <item name="android:textAppearance">@style/Base.Regular.Primary</item>
        <item name="android:textColor">@color/selector_enable_disable_button_text_color</item>
        <item name="android:elevation">0dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

</resources>